{
  "name": "@opentf/react-state",
  "version": "0.12.0",
  "description": "A shared/global state management library for React.",
  "keywords": [
    "react",
    "state",
    "store",
    "manager",
    "global",
    "shared"
  ],
  "author": {
    "name": "Thanga Ganapathy",
    "email": "ganapathy888@gmail.com",
    "url": "https://thanga-ganapathy.github.io"
  },
  "license": "MIT",
  "homepage": "https://react-app-state.pages.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-tech-foundation/react-state.git"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "lint": "eslint src/** --fix",
    "check-types": "tsc --noEmit",
    "ci": "turbo run build test lint check-types"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      "last 2 chrome versions",
      "last 2 edge versions",
      "last 2 firefox versions",
      "last 2 safari versions",
      "maintained node versions"
    ],
    "development": [
      "current node"
    ]
  },
  "devDependencies": {
    "@opentf/eslint-config-base": "^0.1.0",
    "@opentf/utils": "^0.16.0",
    "@swc/core": "^1.3.41",
    "@swc/jest": "^0.2.24",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.0",
    "@types/use-sync-external-store": "^0.0.3",
    "eslint": "^8.36.0",
    "immer": "^9.0.12",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.7.0",
    "typescript": "5.0.2"
  },
  "dependencies": {
    "use-sync-external-store": "1.2.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
